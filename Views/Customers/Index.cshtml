@model Arcade.ViewModels.IndexCustomersViewModel


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col" class="h2">Customers</th>
            <th scope="col" class="h2">Membership Type</th>

        </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model.Customers)
    {
        <tr>

            <td>
                @Html.ActionLink(customer.Name, "Details", new{id=customer.Id}, new {@class = "h3"})

            </td>
            <td>
                @customer.MembershipType.Name
            </td>

        </tr>
    }
    </tbody>
</table>